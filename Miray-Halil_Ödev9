1. SELECT country.country, city.city FROM city INNER join country on country.country = city.country; 
2. SELECT payment.payment_id, customer.first_name, customer.last_name FROM customer INNER join payment on payment.payment_id = customer.payment_id;
3. SELECT remtal.rental_id , customer.first_name, customer.last_name FROM customer INNER join rental on rental.rental_id = customer.rental_id;
